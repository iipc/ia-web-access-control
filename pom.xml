  <packaging>pom</packaging>
  <name>Access-Control</name>
  <version>1.0.0-SNAPSHOT</version>
  
  <organization>
    <name>The International Internet Preservation Consortium</name>
    <url>http://netpreserve.org/</url>
  </organization>
  <licenses>
