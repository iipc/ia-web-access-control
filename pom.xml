  <ciManagement>
    <system>continuum</system>
    <url>https://builds.archive.org:1443/job/ia-web-access-control</url>
  </ciManagement>
  <modules>
    <module>access-control</module>
    <module>oracle</module>
  </modules>
  <properties>
    <website.url>http://github.com/internetarchive/ia-web-access-control</website.url>
