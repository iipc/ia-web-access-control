    </repository>
  </repositories>

  <distributionManagement>
    <repository>
      <id>repository</id>
      <name>Repository</name>
      <url>${repository.url}</url>
    </repository>
    <site>
      <id>website</id>
      <name>Website</name>
      <url>${website.url}/projects/${pom.artifactId}</url>
